{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "include": ["src/**/*", "unit-tests", "tests"],
  "exclude": ["node_modules"]
}